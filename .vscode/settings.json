{
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.codeActionsOnSave": [
    "source.fixAll.eslint"
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "vue"
  ],
  "editor.defaultFormatter": "rvest.vs-code-prettier-eslint",
  "editor.formatOnPaste": false, // required
  "editor.formatOnType": false, // required
  "editor.formatOnSave": true, // optional
  "editor.formatOnSaveMode": "modificationsIfAvailable", // required to format on save
  "prettier.htmlWhitespaceSensitivity": "ignore",
  "prettier.vueIndentScriptAndStyle": true,
  "files.autoSave": "onFocusChange", // optional but recommended
  "javascript.updateImportsOnFileMove.enabled": "always",
  "volar.completion.preferredTagNameCase": "pascal",
  "volar.inlayHints.eventArgumentInInlineHandlers": false,
  "autoimport.filesToScan": "**/*.{js,vue,story.js}",
  "[sass]": {
    "editor.defaultFormatter": "syler.sass-indented"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[mdx]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
  },
  "mdx.experimentalLanguageServer": true,
  "volar.autoCompleteRefs": true,
  "docify.commentService.docstringFormat": "JsDoc",
  "docify.commentService.autoTranslationService": "Portuguese",
  "docify.commentService.inlineComments": true,
  "docify.commentService.sidePanelReviewMode": false,
  "docify.commentService.programmingLanguage": "javascript",
  "docify.translateService.targetLanguage": "Portuguese",
  "docify.translateService.docstringFormat": "JsDoc"
}
